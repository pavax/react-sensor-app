{
  "deviceId": "47617760-ff3a-11ee-9df9-61f0fe185737",
  "name": "Wetter Sensor",
  "dataPointConfigs": {
    "temperature": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    },
    "humidity": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    },
    "dewPoint": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    },
    "windVoltageMax": {
      "aggregationType": "MAX",
      "fractionDigits": 0,
      "transform": "x / 1000 * 14"
    },
    "windDirection": { "aggregationType": "MODE" },
    "rainEventAccDifference": {
      "aggregationType": "SUM",
      "fractionDigits": 0
    },
    "counter": {
      "aggregationType": "LATEST",
      "fractionDigits": 0
    },
    "temperature2": {
      "aggregationType": "LATEST",
      "fractionDigits": 0
    },
    "humidity2": {
      "aggregationType": "LATEST",
      "fractionDigits": 0
    },
    "lux": { "aggregationType": "MAX", "fractionDigits": 0 },
    "uvIndex": { "aggregationType": "MAX", "fractionDigits": 0 },
    "pressure": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    },
    "cloudBaseHeight": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    },
    "batteryVoltage": {
      "aggregationType": "AVERAGE",
      "fractionDigits": 0
    }
  },
  "additionalContextDataConfig": [
    {
      "label": "Device-Uptime Count",
      "text": "LATEST(counter)"
    },
    {
      "label": "Batterie",
      "text": "LATEST(batteryVoltage) mv"
    },
    {
      "label": "Gehäuse Temp.",
      "text": "LATEST(temperature2) °C"
    },
    {
      "label": "Gehäuse Hum.",
      "text": "LATEST(humidity2) %"
    }
  ],
  "overviewCardConfigs": [
    {
      "title": "Temperatur",
      "value": "LATEST(temperature)",
      "unit": "°C",
      "icon": "faTemperatureLow",
      "color": "#8e44ad"
    },
    {
      "title": "Feuchtigkeit",
      "value": "LATEST(humidity)",
      "unit": "%",
      "icon": "faTint",
      "color": "#1abc9c"
    },
    {
      "title": "Wind",
      "value": "LATEST(windVoltageMax)",
      "unit": "m/s",
      "icon": "faWind",
      "color": "#3498db"
    },
    {
      "title": "Regen",
      "value": "SUM(rainEventAccDifference)",
      "unit": "mm",
      "icon": "faCloudRain",
      "color": "#2ecc71"
    },
    {
      "title": "Luftdruck",
      "value": "LATEST(pressure)",
      "unit": "hpa",
      "icon": "faTachometerAlt",
      "color": "#e74c3c"
    },
    {
      "title": "Schnee",
      "value": "--",
      "unit": "",
      "icon": "faSnowflake",
      "color": "#34495e"
    },
    {
      "title": "UV-Index",
      "value": "LATEST(uvIndex)",
      "unit": "",
      "icon": "faSun",
      "color": "#f39c12"
    },
    {
      "title": "Cloudbase Height",
      "value": "LATEST(cloudBaseHeight)",
      "unit": "m",
      "icon": "faCloud",
      "color": "#7f8c8d"
    }
  ],
  "chartConfigs": [
    {
      "title": "Temperatur",
      "icon": "faThermometerHalf",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Temperature",
            "yAxis": "y0",
            "dataKey": "temperature",
            "unit": "°C",
            "color": "lineColor1",
            "style": "line"
          },
          {
            "label": "Dew Point",
            "yAxis": "y0",
            "dataKey": "dewPoint",
            "color": "lineColor2",
            "unit": "°C",
            "pointStyle": "circle",
            "showPoints": "true",
            "showLine": "false",
            "transparency": "40"
          },
          {
            "label": "Temperature (Trend)",
            "yAxis": "y0",
            "dataKey": "temperature",
            "unit": "°C",
            "color": "lineColor3",
            "style": "dashed",
            "isTrendLineData": "true",
            "transparency": "20"
          },
          {
            "label": "Humidtiy",
            "yAxis": "y1",
            "dataKey": "humidity",
            "unit": "%",
            "color": "lineColor4",
            "hidden": "true",
            "transparency": "20"
          }
        ],
        "scales": {
          "y1": {
            "position": "right",
            "min": "0",
            "max": "100",
            "maxTicks": 4,
            "display": {
              "mobile": "false",
              "desktop": "true"
            }
          }
        },
        "plugins": {
          "sunriseSunsets": "true"
        }
      }
    },
    {
      "title": "Wind",
      "icon": "faWind",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Wind Speed",
            "yAxis": "y0",
            "dataKey": "windVoltageMax",
            "unit": "m/s",
            "color": "lineColor1",
            "stepped": "true",
            "fill": {
              "transparency": "20"
            }
          }
        ],
        "plugins": {
          "windDirections": {
            "directionKey": "windDirection"
          }
        }
      }
    },
    {
      "title": "Regen",
      "icon": "faCloudRain",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Regenmenge",
            "yAxis": "y0",
            "dataKey": "rainEventAccDifference",
            "unit": "mm",
            "color": "lineColor1",
            "type": "bar"
          }
        ]
      }
    },

    {
      "title": "Licht",
      "icon": "faSun",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Lux",
            "yAxis": "y0",
            "dataKey": "lux",
            "unit": "lux",
            "color": "lineColor3"
          },
          {
            "label": "UV Index",
            "yAxis": "y1",
            "type": "bar",
            "dataKey": "uvIndex",
            "unit": "",
            "color": "lineColor1"
          },
          {
            "label": "Lux (Trend)",
            "yAxis": "y0",
            "dataKey": "lux",
            "unit": "lux",
            "color": "lineColor3",
            "style": "dashed",
            "isTrendLineData": "true",
            "filter": {
              "min": "0"
            },
            "transparency": "20"
          }
        ],
        "scales": {
          "y0": {
            "ticksFormatter": "(x / 1000) || 'k'"
          },
          "y1": {
            "position": "right",
            "min": "0",
            "max": "12",
            "display": {
              "mobile": "false",
              "desktop": "true"
            }
          }
        },
        "plugins": {
          "sunriseSunsets": "true"
        }
      }
    },
    {
      "title": "Battery",
      "icon": "faBattery",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Batterie",
            "yAxis": "y0",
            "dataKey": "batteryVoltage",
            "unit": "mv",
            "color": "lineColor1"
          },
          {
            "label": "Batterie (Trend)",
            "yAxis": "y0",
            "dataKey": "batteryVoltage",
            "unit": "°C",
            "color": "lineColor3",
            "style": "dashed",
            "isTrendLineData": "true",
            "transparency": "20"
          }
        ],
        "scales": {
          "y0": {
            "min": "3300",
            "max": "4200"
          }
        },
        "plugins": {
          "sunriseSunsets": "true"
        }
      }
    },
    {
      "title": "Cloud Base Height",
      "icon": "faCloud",
      "chartComponent": "LineChart",
      "config": {
        "chartType": "line",
        "dataSets": [
          {
            "label": "Cloud Base Height",
            "yAxis": "y0",
            "dataKey": "cloudBaseHeight",
            "unit": "m",
            "color": "lineColor1"
          }
        ]
      }
    }
  ]
}
